@model TimeKeepers_v2.Models.MWatch

@{
    
    ViewBag.Title = "ADD Product";

}

<!-- Bootstrap Core CSS -->
<link href="../bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- MetisMenu CSS -->
<link href="../bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">
<!-- Custom CSS -->
<link href="../dist/css/sb-admin-2.css" rel="stylesheet">
<!-- Custom Fonts -->
<link href="../bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
<!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
<![endif]-->

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Add Product</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("AddProduct", "Admin", FormMethod.Post, new { enctype="multipart/form-data"}))
                    {
                        <fieldset>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Name, "Enter the name of Product", new { id = "name" })
                                @Html.TextBoxFor(m => m.Name, new { type = "text", @class = "form-control", id = "name", placeholder = "Name" })
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Price, "Enter the Price", new { id = "price" })
                                @Html.TextBoxFor(m => m.Price, new { type = "text", @class = "form-control", id = "price", placeholder = "Price" })
                                @Html.ValidationMessageFor(m => m.Price)
                            </div>
                            @*<div class="form-group">
                                @Html.LabelFor(m => m.Image, "Enter the Image Path", new { id = "imagepath" })
                                @Html.TextBoxFor(m => m.Image, new { type = "text", @class = "form-control", id = "imagepath", placeholder = "ImagePath" })
                                @Html.ValidationMessageFor(m => m.Image)
                            </div>*@

                          

                            <div class="form-group">
                                @Html.LabelFor(m => m.Quantity, "Enter quantity", new { id = "qty" })
                                @Html.TextBoxFor(m => m.Quantity, new { type = "text", @class = "form-control", id = "quantity", placeholder = "Quantity" })
                                @Html.ValidationMessageFor(m => m.Quantity)
                            </div>
                            <div class="form-group">

                                @Html.LabelFor(m => m.Pid, " Select Catagory", new { id = "cat" })
                                @Html.DropDownList("catagory", null, null, new { id = "catagory", @class = "form-control" })

                            </div>
                            <div class="form-group">

                                @Html.LabelFor(m => m.BrandId, " Select Brand " ,new { id = "brand" })
                                @Html.DropDownList("brands", null, null, new { id = "brands", @class = "form-control" })

                            </div>
                          
                            <div class="form-group">
                                <label>Upload small Image</label>
                                <input type="file" id="Image1" name="Image1">
                                <label>@ViewBag.image1</label>

                            </div>

                           
                            <br />
                            <div class="form-group">
                                <label>Upload Large Image</label>
                                <input type="file" id="Image2" name="Image2">
                                <label>@ViewBag.image2</label>

                            </div>

                            <div>
                                <label id="l1" style="color:red">
                                    @ViewBag.label
                                </label>

                            </div>

                            <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" class="btn btn-lg btn-success btn-block">Add</button>

                        </fieldset>
                    }

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <label style=" padding-bottom:30px"></label>
    </div>

</div>
<!-- jQuery -->
<script src="../bower_components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- Metis Menu Plugin JavaScript -->
<script src="../bower_components/metisMenu/dist/metisMenu.min.js"></script>
<!-- Custom Theme JavaScript -->
<script src="../dist/js/sb-admin-2.js"></script>