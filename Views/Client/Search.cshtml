

@{

    ViewBag.Title = "Search Product";

}
<meta name="viewport" content="width=device-width" />


@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">

    $(document).ready(function () {

        $("#watchCat").change(function () {
            var id = $("#watchCat").val();


            if (id > 0) {


                // $("#wat option").remove();
                $.getJSON("/Client/PopulateList?id=" + id, function (data) {

                    $("#wat option").remove();

                    $.each(data, function (i, item) {
                        $("#wat").append('<option value=' + item.Id + '>' + item.Name + '</option>');

                    });
                    //alert(data);

                });
            }


        });
    });
</script>




<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Search Product</h3>
                </div>
                <div class="panel-body">
                 
                        <fieldset>
                           @using (Html.BeginForm("Search", "Client", FormMethod.Post))
                           { 

                            @*@Html.DropDownList("watchCat", null,null,new { id = "watchCat",  @class = "form-control" })*@

                            <select id="watchCat" name="watchCat" class="form-control">
                                <option value="0">--Category--</option>
                                <option value="1">Men Watches</option>
                                <option value="2">Ladies Watches</option>
                                <option value="3">Kids Watches</option>

                            </select>

                            <br />

                            <select id="wat" name="wat" class="form-control">
                                <option value="0">--Watches--</option>
                            </select>

                            <br />
                           
                                                       <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" class="btn btn-lg btn-success btn-block" id="b1" value="Check">Search</button>
                           }
                        </fieldset>
                   

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <label style=" padding-bottom:100px"></label>
    </div>

</div>







<div id="result"></div>  



















